{% extends 'admin/admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="w3-xxxlarge w3-text-red">Categories</h1>
    <hr>

    <table class="w3-table w3-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="w3-btn w3-red">Show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="w3-btn w3-red">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}" class="w3-btn w3-red">Create new</a>
{% endblock %}

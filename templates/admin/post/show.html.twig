{% extends 'admin/admin.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1 class="w3-xxxlarge w3-text-red">Post</h1>
    <hr>
    
    <table class="w3-table w3-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Featured</th>
                <td>{{ post.featured ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ post.thumbnail }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}" class="w3-btn w3-red">Back to list</a>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="w3-btn w3-red">Edit</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}

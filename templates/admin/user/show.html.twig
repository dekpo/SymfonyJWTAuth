{% extends 'admin/admin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="w3-xxxlarge w3-text-red">User</h1>
    <hr>

    <table class="w3-table w3-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}" class="w3-btn w3-red">Back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="w3-btn w3-red">Edit</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
